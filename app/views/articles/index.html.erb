<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
   <li>
     <%= link_to article.title, "/articles/#{article.id}", class: 'article-title', id: "article-#{article.id}" %>
   </li>
  <% end %>
</ul>
<%= link_to "Create a New Article", "/articles/new", class: 'new_article' %>
